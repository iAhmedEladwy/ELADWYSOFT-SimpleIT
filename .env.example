# Environment file template for ELADWYSOFT-SimpleIT
# Copy this file to .env.local and update with your actual values
# Configuration based on Ubuntu deployment script

# Node Environment
NODE_ENV=production

# Database Configuration (PostgreSQL 16 - matching deployment script)
DATABASE_URL=postgres://simpleit:simpleit@postgres:5432/simpleit

# Docker-specific database password
DB_PASSWORD=simpleit

# Application Configuration (matching deployment script)
USE_HTTPS=false
PORT=3000

# Authentication & Session Configuration (matching deployment script)
JWT_SECRET=your_jwt_secret_here_change_this_to_something_secure
SESSION_SECRET=your_session_secret_here_change_this_to_something_secure

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Application Configuration
APP_NAME=SimpleIT
APP_VERSION=0.4.2

# Security
BCRYPT_ROUNDS=12

# Backup Configuration (Optional)
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Port Configuration
PORT=3000

# CORS Configuration (if needed)
CORS_ORIGIN=*