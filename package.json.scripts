{
  "sync-schema": "node scripts/sync-schema.js",
  "auto-sync": "node scripts/auto-sync-workflow.js",
  "db:export": "pg_dump \"$DATABASE_URL\" --schema-only --no-owner --no-privileges > database-schema-export.sql",
  "db:backup": "pg_dump \"$DATABASE_URL\" > database-backup-$(date +%Y%m%d-%H%M%S).sql",
  "db:push": "drizzle-kit push",
  "db:pull": "drizzle-kit introspect",
  "sync:start": "node scripts/auto-sync-workflow.js start",
  "sync:status": "node scripts/auto-sync-workflow.js status"
}